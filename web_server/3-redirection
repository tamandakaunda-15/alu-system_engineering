#!/usr/bin/env bash
# Configures an Nginx server so that /redirect_me redirects to another page.
# The redirection is configured as a "301 Moved Permanently" to the new URL.

# Assuming your Nginx configuration file is named nginx.conf
# Add the following location block inside the server block:

server {
    listen 80;
    server_name tamandakaunda.tech;

    location /redirect_me {
        return 301 https://tamandakaunda.tech/https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    # Other server configuration...
}
